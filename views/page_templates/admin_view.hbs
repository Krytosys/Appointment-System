<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Access Dental Clinic | Admin</title>
    <script src="javascript/jquery.js"></script>
    <link rel="stylesheet" type="text/css"
      href="semantic/dist/semantic.min.css">
    <style type="text/css"> 
        #createUser-button {
          margin-top: 25px;
        }
    </style>
    <script src="semantic/dist/semantic.min.js"></script>
  </head>

  <body onload="setup()">
    <div class="ui top attached tabular menu">
      <a class="item active" data-tab="first">Users</a>
      <a class="item" data-tab="second">Dentists</a>
      <a class="item" data-tab="third">Procedures</a>
      <button class="ui button" id="logout">Logout</button>
    </div>
    <div class="ui bottom attached tab segment active" data-tab="first">
      <table class="ui striped table">
        <thead>
          <tr>
            <th>Username</th>
            <th>Password</th>
            <th class="center aligned">Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each user}}
          <tr>
            <td>{{username}}</td>
            <td>{{password}}</td>
            <td class="center aligned">
              <button class="ui button" data-id="{{_id}}" data-username="{{username}}">Edit</button>
              <button class="negative ui button" data-id="{{_id}}" data-username="{{username}}">Delete</button>
            </td>
          </tr>
          {{/each}}
          <tr>
            <button class="ui green basic button" id="user-button">
              Add
            </button>
          </tr>
        </tbody>
      </table>
    </div>
    {{!-- modal for adding user --}}
    <div class="ui mini modal" id="addUser">
      <div class="header">New User</div>
      <div class="content centered">
        <div class="ui form">
            <div class="required field" id="usernameField">
                <label>Username</label>
                <input type="text" name="username" id="addUsername" placeholder="Username">
            </div>
            <div class="required field" id="passwordField">
                <label>Password</label>
                <input type="password" name="password" id="addPassword" placeholder="Password">
            </div>
            <div class="required field" id="confirmPasswordField">
                <label>Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password">
            </div>
            <div class="inline fields two column centered grid">
              <div class="field" id="checkbox1">
                <div class="ui radio checkbox">
                  <input type="radio" name="frequency" value="doctor" />
                  <label>Dentist</label>
                </div>
              </div>
              <div class="field" id="checkbox2">
                <div class="ui radio checkbox">
                  <input type="radio" name="frequency" value="secretary" />
                  <label>Secretary</label>
                </div>
              </div>
            </div>
            <div class="ui grid">
              <div class="actions column">
                <div class="ui right floated labeled icon green button very padded" id="createUser-button">
                    CREATE
                    <i class="checkmark icon"></i>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
    {{!-- modal for deleting user --}}
    <div class="ui mini modal" id="deleteUser">
      <div class="header">Delete User</div>
      <div class="content">
        <span style="font-size: 15px;">Are you sure you want to delete</span> <span id="modal-text-delete-user" style="font-size: 15px; font-weight: bold;"></span> <span style="font-size: 15px;">?</span>
        <div class="ui grid two column right aligned" id="delete-buttons-user" style="margin-top: 25px;">
          <div class="actions column">
            <div class="ui right floated labeled icon red button" id="deleteUser-button">
                CONFIRM
                <i class="checkmark icon"></i>
            </div>
          </div>
          <div class="actions column">
            <div class="ui right floated labeled icon button deny" id="cancelDeleteUser-button">
                CANCEL
                <i class="cancel icon"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="ui bottom attached tab segment" data-tab="second">
      <table class="ui striped table">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th class="center aligned">Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each dentist}}
          <tr>
            <td>{{firstname}}</td>
            <td>{{lastname}}</td>
            <td class="center aligned">
              <button class="ui button" data-id="{{_id}}">Edit</button>
              <button class="negative ui button" data-id="{{_id}}">Delete</button>
            </td>
          </tr>
          {{/each}}
          <tr>
            <button class="ui green basic button" id="dentist-button">
              Add
            </button>
          </tr>
        </tbody>
      </table>
    </div>
    
    <div class="ui bottom attached tab segment" data-tab="third">
      <table class="ui striped table">
        <thead>
          <tr>
            <th>Name</th>
            <th class="center aligned">Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each procedure}}
          <tr>
            <td>{{processname}}</td>
            <td class="center aligned">
              <button class="ui button" data-id="{{_id}}">Edit</button>
              <button class="negative ui button" data-id="{{_id}}">Delete</button>
            </td>
          </tr>
          {{/each}}
          <tr>
            <button class="ui green basic button" id="procedure-button">
              Add
            </button>
          </tr>
        </tbody>
      </table>
    </div>
    <script <script src="javascript/admin_view.js"></script>
  </body>
</html>
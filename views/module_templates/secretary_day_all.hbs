<tr>
    <td colspan="15" class="center aligned">
        <div class="ui header">Daily Appointments</div>
    </td>
</tr>
{{#each data}}
<tr>
    <td id="timeslotContainer" class="center aligned" onclick="quickAdd('{{slot}}')">
        <span id="timeslot" class="ui black text" >{{slot}}</span>
    </td>
    <td colspan="14" class="center aligned daily appointment cell">
        <table class="ui large basic compact fixed celled structured unstackable table" id="slots-table">
            <tbody>
                {{#each appointments}}
                <td class="left aligned {{colorcells @index}} side colored colored colored colored strip" onclick="openDetailsModal('{{_id}}')">
                    <div class="ui medium header">
                        {{firstname}} {{lastname}}
                    </div>
                    <div class="ui medium text">
                        {{#each process}}
                            {{commafy @index}}{{processname}}
                        {{/each}}
                    </div>
                    <div class="ui medium text">
                        {{#each doctor}}
                            {{commafy @index}}Dr. {{lastname}}
                        {{/each}}
                    </div>
                </td>
                {{/each}}
            </tbody>
        </table>
    </td>
</tr>
{{/each}}